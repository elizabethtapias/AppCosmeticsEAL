<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageButton
        android:src="@drawable/HOME"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnHome"/>

    <TextView
        android:text="ADMINISTRATION MANAGEMENT"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="280px"
        android:id="@+id/txtContact"/>

    <EditText
        android:hint="Id"
        android:layout_width="255.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130px"
        android:layout_marginTop="50px"
        android:id="@+id/txtId"/>

     <EditText
        android:hint="UserName"
        android:layout_width="255.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:id="@+id/txtUserNameNew"/>
        
    <EditText
        android:hint="Password"
        android:layout_width="255.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:id="@+id/txtPasswordNew"/>



    <Button
        android:text="INSERT"
        android:layout_width="267.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:id="@+id/btnInsertarRegistro"/>

    <Button
        android:text="SEARCH"
        android:layout_width="267.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:id="@+id/btnConsultarRegistro"/>

    <Button
        android:text="DELETE"
        android:layout_width="267.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:id="@+id/btnEliminarRegistro"/>

    <Button
        android:text="UPDATE"
        android:layout_width="267.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:id="@+id/btnActualizarRegistro"/>
</LinearLayout>
