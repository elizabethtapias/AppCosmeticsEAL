<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <ImageButton
            android:src="@drawable/HOME"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnHome" />

    <TextView
            android:text="PORTFOLIO"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="280px"
            android:id="@+id/txtPortfolio" />

    <TextView
            android:text="Our Products"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="270px"
            android:layout_marginTop="90px"
            android:id="@+id/txtP"/>

    <ImageView
        android:src="@drawable/portfolio"
        android:layout_width="match_parent"
        android:layout_height="446.0dp"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/imageP"/>

    <Button
        android:text="HOME PAGE"
        android:layout_width="267.0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120px"
        android:id="@+id/btnIndex"/>


</LinearLayout>
